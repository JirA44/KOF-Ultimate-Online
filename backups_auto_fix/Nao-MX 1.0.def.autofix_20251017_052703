; 功夫人的中文化def文档。
; 由MKII翻译。
; 包括人物所需要的文件名。

; 人物信息
[Info]
name = "Nao-MX"        ;人物名
displayname = "Nao-MX" ;显示名
versiondate = 09,01,2012    ;人物版本号 (月-日-年 或者 X.XX)
mugenversion = 1.0          ;人物对应的MUGEN版本 (X.XX)
author = "小银";(sakata gintoki)         ;作者名
;AI by "Deer"
pal.defaults = 12      ;默认色表顺序 (最多4个)
                            ;序号从1开始
localcoord = 320,240        ;分辨率宽度和高度

; 人物文件
[Files]
cmd     = nao-mx.cmd           ;操作输入
cns     = nao-mx.cns           ;常量定义
st      = nao-mx.cns           ;State定义
st1      = p2.cns
st2      = nao-mx2.cns
st3      = -2-3.cns                ;防止受身
stcommon = common1.cns      ;公用state (人物文件夹或者common文件夹中)
sprite  = nao-mx.sff           ;图像文件
anim    = nao-mx.air           ;动作文件
sound   = nao-mx.snd           ;声效文件

;ai      = kfm.ai            ;系统AI用文件 (未实装，可以无视)

; 将选人时的按键对应到色表上
[Palette Keymap]
a = 1 ;按X按键选色表1，以此类推
b = 2
c = 3
x = 4
y = 5
z = 6
a2 = 7 ;按start和X按键选色表7，以此类推
b2 = 8
c2 = 9
x2 = 10
y2 = 11
z2 = 12

; arcade模式的开头结局动画
[Arcade]
;intro.storyboard = intro.def
;ending.storyboard = ending.def
